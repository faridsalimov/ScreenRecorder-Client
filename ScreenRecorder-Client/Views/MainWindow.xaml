<Window x:Class="ScreenRecorder_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenRecorder_Client"
        mc:Ignorable="d"
        Title="Screen Recorder - Client" Height="100" Width="150"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Connect" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold" Background="LightBlue" Command="{Binding ConnectCommand}"/>
    </Grid>
</Window>
